                <span asp-validation-for="ClienteNombre" class="text-danger"></span>
             </div>-->
            <div class="form-group">
                <label asp-for="ClienteNombre" class="control-label"></label>
                <select asp-for="ClienteNombre" class="form-control" asp-items="ViewBag.ClienteNombre"></select>
            </div>
            <div class="form-group">
                <label asp-for="finalizado" class="control-label"></label>
                <input asp-for="finalizado" class="form-check" />
                <span asp-validation-for="finalizado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

